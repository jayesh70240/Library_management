<div class="bg-gradient-to-r from-blue-500 to-purple-500 text-gray-800 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-center text-blue-500">Check Out a Book</h1>

    <%= form_for @book_issue, html: { class: 'mx-auto' } do |f| %>
      <% if @book_issue.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded">
          <ul>
            <% @book_issue.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :issued_to, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.text_field :patron_name, class: 'w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="mb-4">
        <%= f.label :book_id, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.collection_select(:book_id, Book.where(checked_out: false), :id, :title, { prompt: 'Select a book' }, class: 'w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline') %>
      </div>

      <div class="mb-6">
        <%= f.submit 'Check Out', class: 'w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
