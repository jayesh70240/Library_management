<table class="min-w-full bg-white border border-gray-300">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th scope="col" class="py-2 px-4 text-center">Reg.Id</th>
      <th scope="col" class="py-2 px-4 text-center">Name</th>
      <th scope="col" class="py-2 px-4 text-center">Email</th>
      <th scope="col" class="py-2 px-4 text-center">Membership Type</th>
      <th scope="col" class="py-2 px-4 text-center">Issue Date</th>
      <th scope="col" class="py-2 px-4 text-center">Expiration Date</th>
      <th scope="col" class="py-2 px-4 text-center">Renew</th>
      <th scope="col" class="py-2 px-4 text-center">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @memberships.each do |m| %>
      <tr>
        <td class="py-2 px-4 text-center"><%= m.id %></td>
        <td class="py-2 px-4 text-center"><%= m.name %></td>
        <td class="py-2 px-4 text-center"><%= m.email %></td>
        <td class="py-2 px-4 text-center"><%= m.membership_type %></td>
        <td class="py-2 px-4 text-center"><%= m.created_at.to_date %></td>
        <td class="py-2 px-4 text-center"><%= m.expiration_date.to_date %></td>
        <td class="py-2 px-4 text-center">
          <%= link_to "Renew", renew_membership_path(m), method: :post, class: "text-blue-500 hover:underline" %>
        </td>
        <td class="py-2 px-4 text-center <%= m.expired? ? 'text-red-500 font-bold' : 'text-green-500 font-bold' %>">
          <%= m.expired? ? 'Expired' : 'Valid' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
